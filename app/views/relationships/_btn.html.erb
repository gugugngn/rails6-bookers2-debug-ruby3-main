<% if current_user != user %>  <!--現在のユーザーと表示対象のユーザーが異なるかをチェックしています。自分自身をフォローすることはできないため、自分自身の場合はフォローボタンを表示しません。-->
  <% if current_user.following?(user) %>   <!--following?(user)  指定したユーザーをフォローしているかどうかを判定,現在のユーザーが表示対象のユーザーを既にフォローしているかどうかをチェック-->
    <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: options[:class].presence || "btn btn-info" %>
  <% else %>
    <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: options[:class].presence || "btn btn-success" %>
  <% end %>
<% end %>